<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--圆形/圆角矩形图片样式-->
    <declare-styleable name="CircleImageView">
        <attr name="type" format="enum">
            <enum name="none" value="0"/>
            <enum name="circle" value="1"/>
            <enum name="rect_rounded" value="2"/>
        </attr>
        <attr name="borderColor" format="color"/>
        <attr name="borderWidth" format="dimension"/>
        <attr name="rectRoundRadius" format="dimension"/>
    </declare-styleable>

    <!--自定义加减控件-->
    <declare-styleable name="CounterView">
        <!--初始值-->
        <attr name="init_num" format="integer"/>
        <!--上限-->
        <attr name="up_limit" format="integer"/>
        <!--下限-->
        <attr name="down_limit" format="integer"/>
    </declare-styleable>
    <!-- 彩色的点 -->
    <declare-styleable name="DotView">
        <attr name="dotColor" format="color"/>
        <attr name="dotSize" format="integer"/>
    </declare-styleable>
    <declare-styleable name="ValidatedInputTextLayout">
        <attr name="autoValidate" format="boolean" />
        <attr name="autoTrim" format="boolean" />
        <attr name="isRequired" format="boolean" />
        <attr name="requiredValidationMessage" format="string" />
        <attr name="minLength" format="integer">
            <enum name="zero" value="0" />
        </attr>
        <attr name="maxLength" format="integer">
            <enum name="indefinite" value="-1" />
        </attr>
        <attr name="lengthValidationMessage" format="string" />
        <attr name="regex" format="string" />
        <attr name="regexValidationMessage" format="string" />
    </declare-styleable>
</resources>