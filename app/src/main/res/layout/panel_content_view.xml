<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/panel_content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp">
    <!-- 这是展开的头 -->
    <FrameLayout
        android:id="@+id/panel_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:padding="0dp">

        <ImageView
            android:id="@+id/panel_collapse_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@null"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/panel_settings_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="4dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@null"
            android:padding="8dp" />
    </FrameLayout>
    <!-- 这是内容主体 -->
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/panel_expend_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/panel_menu_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:background="#03A9F4">

    </android.support.constraint.ConstraintLayout>
    <!-- 这是底部卡片 -->
    <FrameLayout
        android:id="@+id/panel_collapse_layout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:alpha="0.0"
        android:background="@color/progresstext"
        android:orientation="horizontal"
        android:padding="0dp"
        tools:alpha="1.0">

        <TextView
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="运动 909m"
            android:textColor="@color/cardview_dark_background"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            android:typeface="normal" />

    </FrameLayout>
</RelativeLayout>