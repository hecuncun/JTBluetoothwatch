<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg_color">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="分享我的海报"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/rl_share_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_28"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title">

        <ImageView
            android:id="@+id/im_bg_share"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:adjustViewBounds="true"
            android:background="@drawable/bg_rec_share_poster"
            android:padding="@dimen/dp_12"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_share_default"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/iv_head_photo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignRight="@+id/im_bg_share"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_23"
            android:src="@drawable/pic_head" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_head_photo"
            android:layout_alignRight="@+id/im_bg_share"
            android:layout_marginTop="6dp"
            android:layout_marginRight="@dimen/dp_23"
            android:text="港口的哨兵"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_alignRight="@+id/im_bg_share"
            android:layout_marginTop="2dp"
            android:layout_marginRight="@dimen/dp_23"
            android:text="4月28日周三，09-10"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_sports_num_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_step_title"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginBottom="2dp"
            android:ems="1"
            android:text="运动"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_sports_num"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_step_title"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toRightOf="@+id/tv_sports_num_title"
            android:text="02"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold|italic"
            android:typeface="monospace" />


        <TextView
            android:id="@+id/tv_step_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_distance_title"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginBottom="2dp"
            android:ems="1"
            android:text="步数"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_step"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_distance_title"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toRightOf="@+id/tv_sports_num_title"
            android:text="23456000"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold|italic"
            android:typeface="monospace" />


        <TextView
            android:id="@+id/tv_distance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_calorie_title"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginBottom="2dp"
            android:ems="1"
            android:text="里程"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_calorie_title"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toRightOf="@+id/tv_sports_num_title"
            android:text="23456000"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold|italic"
            android:typeface="monospace" />


        <TextView
            android:id="@+id/tv_calorie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/im_bg_share"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginBottom="40dp"
            android:ems="1"
            android:text="热量"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_calorie"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/im_bg_share"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="40dp"
            android:layout_toRightOf="@+id/tv_sports_num_title"
            android:text="23456000"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold|italic"
            android:typeface="monospace" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_save_poster"
        android:layout_width="@dimen/dp_180"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/dp_2"
        android:gravity="center"
        android:text="保存到手机图库"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_share_poster" />


    <ImageView
        android:id="@+id/im_weixin"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_selector_poster_weixin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_save_poster" />

    <ImageView
        android:id="@+id/im_circle"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_selector_poster_circle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_save_poster" />


    <ImageView
        android:id="@+id/im_qq"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="15dp"
        android:layout_marginRight="90dp"
        android:background="@drawable/bg_selector_poster_qq"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_save_poster" />

    <ImageView
        android:id="@+id/im_cancel"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_selector_poster_cancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/im_qq" />

</android.support.constraint.ConstraintLayout>